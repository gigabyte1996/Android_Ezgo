<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorConcept"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/from_station"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorConcepLight">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons8_marker_filled_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@string/font_name"
                android:text="Da Nang"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorConcepLight">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons8_marker_filled_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@string/font_name"
                android:text="Da Nang"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@color/colorConcepLight"
            android:clickable="true"   >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons8_planner_filled_50"
                android:clickable="false"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@string/font_name"
                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:clickable="false"/>

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/colorConcepLight"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="20sp"
                android:background="@android:color/white"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/colorConcepLight"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorConcepLight"
            android:layout_marginTop="20dp"
            android:text="SHOW TRAINS"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="12">
        <TextView
            android:id="@+id/txtTrainName"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SE06"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"

            />
        <TextView
            android:id="@+id/txtjouneyName"
            android:gravity="center"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Da Nang - Hue"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/imgPantryCar"
            android:padding="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/icons8_restaurant_filled_50"
            />
        <TextView
            android:id="@+id/btnSchedule"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Schedule"
            android:textSize="17sp"
            android:textColor="@color/colorConcept"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="12"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/txtDepartureTime"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="13:00"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
            <TextView
                android:gravity="center"
                android:id="@+id/txtDepartureDate"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="13:00"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/icons8_long_arrow_up_50"
                />
            <TextView
                android:id="@+id/duration"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="18:00 hr"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/txtArrivalTime"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="13:00"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
            <TextView
                android:gravity="center"
                android:id="@+id/txtArrivalDate"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="13:00"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ticketDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket Detail"
            android:textColor="@color/colorConcept"
            android:textSize="15sp"
            android:layout_marginRight="190dp"/>
        <Button
            android:id="@+id/btnBoooking"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Book"
            android:textSize="15dp"
            android:textColor="@color/colorConcept"
            android:background="@drawable/small_button_costum_border"/>
    </LinearLayout>
</LinearLayout>